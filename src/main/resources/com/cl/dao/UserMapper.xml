<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cl.dao.UserMapper">
        <select id="queryUserByUsername" resultType="user" parameterType="String">
            SELECT * FROM t_user WHERE username=#{username}
        </select>
    <insert id="saveUser" parameterType="user">
        INSERT INTO t_user(username, password, email) VALUES (#{username},#{password},#{email});
    </insert>
    <select id="queryUserByUsernameAndPassword" parameterType="String" resultType="user">
        SELECT * FROM t_user WHERE username=#{username} AND password=#{password};
    </select>


</mapper>